# ============================================================================
# TP18 - Portainer Enterprise Configuration
# ============================================================================

# Portainer Configuration
PORTAINER_HOSTNAME=portainer.example.com
PORTAINER_ADMIN_PASSWORD=PortainerAdminPassword123!
PORTAINER_VERSION=latest
PORTAINER_LOG_LEVEL=info

# TLS/SSL
CERT_EMAIL=admin@example.com
ACME_SERVER=https://acme-v02.api.letsencrypt.org/directory

# Traefik
TRAEFIK_DASHBOARD_HOST=traefik.example.com
TRAEFIK_LOG_LEVEL=INFO

# PostgreSQL Database
POSTGRES_DATABASE=portainer
POSTGRES_USER=portainer
POSTGRES_PASSWORD=PostgresPassword123!

# Monitoring
GRAFANA_ADMIN_PASSWORD=GrafanaPassword123!
PROMETHEUS_RETENTION=30d

# Features
PORTAINER_HIDE_LABELS=false
PORTAINER_LOGO=default
PORTAINER_ENABLE_EDGE=true
PORTAINER_ENABLE_TEAMS=true
PORTAINER_ENABLE_RBAC=true
