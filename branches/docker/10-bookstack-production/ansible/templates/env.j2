# Production Environment Configuration
# Generated by Ansible

DOMAIN={{ domain }}
CLOUDFLARE_EMAIL={{ cloudflare_email }}
CLOUDFLARE_API_TOKEN={{ cloudflare_api_token }}

# BookStack
BOOKSTACK_APP_KEY=base64:{{ lookup('password', '/dev/null chars=ascii_letters,digits length=32') | b64encode }}
BOOKSTACK_APP_URL=https://bookstack.{{ domain }}
BOOKSTACK_DB_HOST=bookstack-db
BOOKSTACK_DB_DATABASE=bookstack
BOOKSTACK_DB_USERNAME=bookstack

# Mail Configuration
MAIL_DRIVER={{ mail_driver }}
MAIL_HOST={{ mail_host }}
MAIL_PORT={{ mail_port }}
MAIL_FROM={{ mail_from }}
MAIL_FROM_NAME="BookStack"
MAIL_USERNAME={{ mail_username }}
MAIL_ENCRYPTION=tls

# Authelia
AUTHELIA_JWT_SECRET={{ lookup('password', '/dev/null chars=ascii_letters,digits length=64') }}
AUTHELIA_SESSION_SECRET={{ lookup('password', '/dev/null chars=ascii_letters,digits length=64') }}
AUTHELIA_STORAGE_ENCRYPTION_KEY={{ lookup('password', '/dev/null chars=ascii_letters,digits length=64') }}

# Backup
BACKUP_SCHEDULE=0 2 * * *
BACKUP_KEEP_LAST=10
RESTIC_REPOSITORY=/backups/restic
RESTIC_TAG=bookstack-production

# Monitoring
GF_SECURITY_ADMIN_USER=admin
GF_SERVER_ROOT_URL=https://grafana.{{ domain }}

# Timezone
TZ={{ timezone }}

# Generated by Ansible on {{ ansible_date_time.iso8601 }}
