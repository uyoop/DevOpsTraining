api:
  dashboard: true
  insecure: false

log:
  level: INFO
  format: json
  filePath: /var/log/traefik/access.log

entryPoints:
  web:
    address: ":80"
    http:
      redirections:
        entryPoint:
          to: websecure
          scheme: https
  websecure:
    address: ":443"
    http:
      tls:
        certResolver: cloudflare
        domains:
          - main: "{{ domain }}"
            sans:
              - "*.{{ domain }}"

certificatesResolvers:
  cloudflare:
    acme:
      email: {{ cloudflare_email }}
      storage: /letsencrypt/acme.json
      dnsChallenge:
        provider: cloudflare
        resolvers:
          - "1.1.1.1:53"
          - "8.8.8.8:53"

providers:
  docker:
    exposedByDefault: false
    network: proxy
  file:
    directory: /config/dynamic
    watch: true

