# ========================================
# DOMAINE ET CERTIFICATS SSL
# ========================================
DOMAIN=example.com
CLOUDFLARE_EMAIL=your-email@example.com
CLOUDFLARE_API_TOKEN=your-cloudflare-api-token

# ========================================
# TIMEZONE
# ========================================
TIMEZONE=Europe/Paris

# ========================================
# DATABASE
# ========================================
DB_DATABASE=bookstack
DB_USER=bookstack

# ========================================
# MAIL CONFIGURATION
# ========================================
MAIL_DRIVER=smtp
MAIL_HOST=smtp.gmail.com
MAIL_PORT=587
MAIL_FROM=bookstack@example.com
MAIL_USERNAME=your-email@gmail.com
MAIL_ENCRYPTION=tls

# ========================================
# BACKUP
# ========================================
BACKUP_REPOSITORY=/backups/bookstack
BACKUP_CRON=0 2 * * *

# ========================================
# MONITORING
# ========================================
GRAFANA_USER=admin

# ========================================
# CROWDSEC
# ========================================
CROWDSEC_BOUNCER_KEY=generate-with-cscli-bouncers-add
