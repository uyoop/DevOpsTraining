Vagrant.configure("2") do |config|
	config.vm.box_check_update = false

	# VM 1 : Base de données
	config.vm.define "db" do |db|
		db.vm.hostname = "db-server"
		db.vm.box = "bento/debian-13"
		db.vm.network "private_network", ip: "192.168.56.11"

		db.vm.provider "virtualbox" do |vb|
			vb.memory = 1024
			vb.cpus = 1
		end

		# Provisionnement : installer MariaDB et appliquer le script SQL externe
		db.vm.provision "shell", inline: <<-SHELL
			set -e
			export DEBIAN_FRONTEND=noninteractive
			# Configurer le clavier en français
			sudo sed -i 's/XKBLAYOUT=\".*\"/XKBLAYOUT=\"fr\"/' /etc/default/keyboard
    		sudo service keyboard-setup restart
    		sudo udevadm trigger --subsystem-match=input --action=change
			apt-get update
			apt-get install -y mariadb-server
			
			# Configurer MariaDB pour écouter sur toutes les interfaces
			CONF="/etc/mysql/mariadb.conf.d/50-server.cnf"
			if [ -f "$CONF" ]; then
				sed -i "s/^bind-address.*/bind-address = 0.0.0.0/" "$CONF" || true
			else
				# Fallback for other config paths
				echo "bind-address = 0.0.0.0" >> /etc/mysql/mariadb.conf.d/50-server.cnf
			fi

			systemctl restart mariadb || systemctl restart mysql || true
			systemctl enable mariadb || systemctl enable mysql || true

			# Attendre que MariaDB soit prêt
			for i in $(seq 1 10); do
				mysqladmin ping >/dev/null 2>&1 && break || sleep 1
			done

			# Exécuter le script SQL fourni dans /vagrant/db_sql/db_init.sql
			if [ -f /vagrant/db_sql/db_init.sql ]; then
				mysql < /vagrant/db_sql/db_init.sql || true
			fi
		SHELL
	end

	# VM 2 : Serveur Web
	config.vm.define "web" do |web|
		web.vm.hostname = "web-server"
		web.vm.box = "bento/debian-13"
		web.vm.network "private_network", ip: "192.168.56.10"
		web.vm.network "forwarded_port", guest: 80, host: 8080

		web.vm.provider "virtualbox" do |vb|
			vb.memory = 1024
			vb.cpus = 1
		end

		# Dossier partagé : project ./shared -> /var/www/html
		web.vm.synced_folder "./shared", "/var/www/html"

		# Provisionnement : Apache2 + PHP + php-mysql
		web.vm.provision "shell", inline: <<-SHELL
			set -e
			export DEBIAN_FRONTEND=noninteractive
			apt-get update
			apt-get install -y apache2 php php-mysql

			# Assurer que le dossier existe et appartient à www-data
			mkdir -p /var/www/html
			chown -R www-data:www-data /var/www/html

			systemctl restart apache2 || true
		SHELL
	end
end

